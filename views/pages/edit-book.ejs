<% include ../partials/header.ejs %>
<div class="container">
  <div class="row">
      <form class="form-horizontal" action="/book/edit" method="POST">
        <input type="hidden" name="e_id" value="<%= item.e_id%>"/>
        <div class="form-group">
          <label for="inputName" class="col-sm-2 control-label">Book Title*</label>
          <div class="col-sm-10">
            <input class="form-control" id="inputName" type="text" name="e_name" value="<%= item.e_name%>" placeholder="Book Title" required/>
          </div>
        </div>
        <div class="form-group">
          <label for="inputDesc" class="col-sm-2 control-label">Author</label>
          <div class="col-sm-10">
            <input class="form-control" type="text" id="inputLocation" value="<%= item.e_location%>" name="e_location" placeholder="Author" />
          </div>
        </div>
        <div class="form-group">
          <label for="inputDesc" class="col-sm-2 control-label">Publisher</label>
          <div class="col-sm-10">
            <input class="form-control" type="text" id="inputDesc" value="<%= item.e_desc%>" name="e_desc" placeholder="Publisher" />
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a href="/" class="btn btn-default">Cancel</a>
          </div>
        </div>
      </form>
  </div>
</div>
<% include ../partials/footer.ejs %>
